<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/ic_wallpaper_pussy_one"
            android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop"/>
    <TextView
            android:text="@string/time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTimeLeft" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:textColor="@color/colorText" android:textSize="18sp"/>
    <TextView
            android:text="@string/your_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewGameStore"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textColor="@color/colorText" android:textSize="18sp"/>
    <Button
            android:text="@string/caress_me"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonCaress" android:layout_marginTop="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:background="@color/colorAccent"
            android:textColor="@color/colorText"/>
    <Button
            android:text="@string/introduce_me"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/buttonIntroduce"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:background="@color/colorAccent"
            android:textColor="@color/colorText" app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/imageView"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/buttonCaress"
            app:layout_constraintVertical_bias="0.541"/>
</android.support.constraint.ConstraintLayout>